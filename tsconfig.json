{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"rootDir": "src",
		"outDir": "dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strictPropertyInitialization": false,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"declaration": true
	},
	"include": [
		"src"
	],
	"exclude": [
		"__tests__"
	]
}
